package exercicio;

import java.util.Scanner;

public class Exercicio2 {

	public static void main(String[] args) {

		double salarioBruto, novoSalarioBruto, percentualDesc = 11;
		
		Scanner recebe = new Scanner(System.in);
		
		System.out.println("Informe o salário bruto: ");
		salarioBruto = recebe.nextDouble();
		
		novoSalarioBruto = salarioBruto * 0.11;
		
		System.out.printf("Salário Bruto: R$ %.2f\nDesconto INSS: %.0f\nNovo Salário: R$ %.2f", salarioBruto, percentualDesc, novoSalarioBruto);
		
		recebe.close();

	}

}
